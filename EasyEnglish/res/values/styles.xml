<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.Button" parent="android:Widget">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.BoldTextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>