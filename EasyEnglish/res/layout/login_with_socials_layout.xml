<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/loginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/login_using_socials"
        android:textSize="@dimen/default_text_size" />

    <ImageView
        android:id="@+id/facebookIv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_below="@+id/loginTv"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sign_in_with_facebook" />

    <ImageView
        android:id="@+id/googleIv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_below="@+id/facebookIv"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginRight="@dimen/side_margin"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/sign_in_with_google" />

</RelativeLayout>