<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:minWidth="200dp" >

    <RelativeLayout
        android:id="@+id/contentRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" >

        <RelativeLayout
            android:id="@+id/origWordLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:minHeight="50dp"
            android:padding="10dp" >

            <TextView
                android:id="@+id/origWordTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/wordIv"
                android:text="@string/app_name" />

            <ImageView
                android:id="@+id/wordIv"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lineTv1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/origWordLl"
            android:layout_marginTop="5dp"
            android:background="@color/orange" />

        <LinearLayout
            android:id="@+id/translationLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lineTv1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:minHeight="50dp"
            android:orientation="vertical"
            android:padding="10dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/lineTv2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/translationLl"
            android:layout_marginTop="5dp"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_below="@id/lineTv2"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="@drawable/text_butt_bg"
            android:text="@string/cancel"
            android:gravity="center"
            android:textSize="@dimen/buttons_text_size"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/loadPb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>