<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding" >

    <TextView
        android:id="@+id/wordTransTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/label_margin"
        android:text="@string/word_trans"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"/>

    <TextView
        android:id="@+id/transWordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wordTransTv"
        android:layout_marginTop="@dimen/label_margin"
        android:text="@string/trans_word"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"/>

    <TextView
        android:id="@+id/wordConstrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/transWordTv"
        android:layout_marginTop="@dimen/label_margin"
        android:text="@string/word_constructor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"/>

    <TextView
        android:id="@+id/listeningTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wordConstrTv"
        android:layout_marginTop="@dimen/label_margin"
        android:text="@string/listening"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:clickable="true"/>
    
</RelativeLayout>